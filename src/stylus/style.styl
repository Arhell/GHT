white = #ffffff
mainColor = #cf4647

body
  margin 0

h1
  margin: 0

.header
  width 100%
  height 100vh
  background-color mainColor
  display flex
  align-items center
  justify-content center
  flex-direction column

.title,
.sub-title
  color white

.github
  position fixed
  right 0
  top 0
  height 80px
  width 80px
  border-bottom 0
  text-decoration none
  z-index 1
  fill white
  &:hover .octo-arm
    animation anim .56s ease-in-out

.octo-arm,
.octo-body
  color mainColor

@keyframes anim
  0%,to
    transform: rotate(0)

  20%,60%
    transform: rotate(-25deg)

  40%,80%
    transform: rotate(10deg)